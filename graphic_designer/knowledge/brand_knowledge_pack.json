    "domains": {
        "brand_strategy": {
            "title": "Brand Strategy Foundations",
            "description": "Expert-level strategic frameworks for brand identity development",
            "principles": {
                "strategic_pillars": {
                    "core_truth": {
                        "definition": "The non-negotiable belief the brand stands for (not a slogan)",
                        "application": "Define before any visual work begins",
                        "example": "Patagonia: 'We're in business to save our home planet'",
                        "rule": "Must be authentic, defensible, and differentiating"
                    },
                    "positioning": {
                        "definition": "The space the brand occupies in the mind, not the market",
                        "framework": "Against [competitor], we are [unique attribute] for [audience]",
                        "rules": [
                            "Must be defensible - can you own this space?",
                            "Must be relevant - does the audience care?",
                            "Must be distinct - is it different from competitors?"
                        ],
                        "example": "Against utilitarian tech brands, we are the elegant choice for discerning professionals"
                    },
                    "audience_archetypes": {
                        "definition": "Psychological profiles, not demographics",
                        "types": [
                            "The Explorer - seeks adventure and discovery",
                            "The Creator - values self-expression and innovation",
                            "The Ruler - desires control and leadership",
                            "The Caregiver - motivated by service and compassion",
                            "The Sage - pursues knowledge and truth",
                            "The Innocent - seeks simplicity and happiness",
                            "The Hero - strives for mastery and courage",
                            "The Rebel - challenges the status quo",
                            "The Magician - transforms reality",
                            "The Lover - creates intimacy and passion",
                            "The Jester - brings joy and entertainment",
                            "The Everyman - seeks belonging and connection"
                        ],
                        "application": "Map brand personality to audience archetype for alignment"
                    },
                    "value_ladder": {
                        "levels": [
                            {
                                "tier": "Functional",
                                "description": "What the product does",
                                "example": "A car provides transportation"
                            },
                            {
                                "tier": "Emotional",
                                "description": "How it makes you feel",
                                "example": "A car makes you feel free"
                            },
                            {
                                "tier": "Social",
                                "description": "How others perceive you",
                                "example": "A car signals your status"
                            },
                            {
                                "tier": "Self-expressive",
                                "description": "Who you become",
                                "example": "A car expresses your identity"
                            }
                        ],
                        "rule": "Premium brands operate at emotional/self-expressive levels, not just functional"
                    },
                    "brand_personality_matrix": {
                        "description": "6-axis sliding scale system for defining brand personality",
                        "axes": [
                            {
                                "name": "Friendly ↔ Authoritative",
                                "scale": "1-10",
                                "1": "Warm, approachable, conversational",
                                "10": "Expert, commanding, formal"
                            },
                            {
                                "name": "Classic ↔ Modern",
                                "scale": "1-10",
                                "1": "Traditional, timeless, heritage",
                                "10": "Cutting-edge, contemporary, innovative"
                            },
                            {
                                "name": "Minimal ↔ Expressive",
                                "scale": "1-10",
                                "1": "Simple, restrained, understated",
                                "10": "Bold, decorative, maximalist"
                            },
                            {
                                "name": "Rational ↔ Emotional",
                                "scale": "1-10",
                                "1": "Data-driven, logical, analytical",
                                "10": "Feeling-driven, passionate, empathetic"
                            },
                            {
                                "name": "Premium ↔ Accessible",
                                "scale": "1-10",
                                "1": "Exclusive, luxury, aspirational",
                                "10": "Inclusive, affordable, democratic"
                            },
                            {
                                "name": "Playful ↔ Serious",
                                "scale": "1-10",
                                "1": "Fun, whimsical, lighthearted",
                                "10": "Professional, sober, earnest"
                            }
                        ],
                        "application": "Score brand on all 6 axes before visual development to ensure consistency"
                    },
                    "brand_narrative_framework": {
                        "structure": [
                            {
                                "stage": "Conflict",
                                "description": "The problem or tension in the market/world"
                            },
                            {
                                "stage": "Insight",
                                "description": "The unique understanding or perspective"
                            },
                            {
                                "stage": "Resolution",
                                "description": "How the brand solves the problem"
                            },
                            {
                                "stage": "Transformation",
                                "description": "The change the brand creates in customers' lives"
                            }
                        ],
                        "rule": "Every brand identity should emerge from a narrative, not just aesthetics"
                    },
                    "differentiation_law": {
                        "principle": "If the design feels 'safe,' it's already similar to someone else's",
                        "application": "Always validate uniqueness vs. competitors before finalizing",
                        "test": "Can this identity be confused with any competitor? If yes, redesign."
                    }
                },
                "story_kernel": {
                    "template": "We help [audience] become [aspiration] by [unique approach]",
                    "examples": [
                        "We help creators feel confident by giving them tools that amplify their voice",
                        "We help busy professionals achieve balance by simplifying their daily routines",
                        "We help entrepreneurs build legacy by providing strategic clarity"
                    ],
                    "application": "Create story kernel before visual identity development"
                }
            },
            "strategic_questions": [
                "What problem is this brand solving?",
                "What emotion should the audience feel?",
                "What differentiates this identity from competitors?",
                "What archetype does the audience identify with?",
                "What level of the value ladder does this brand operate on?"
            ],
            "behavioral_standards": [
                "Always ask strategic questions before designing",
                "Always justify design decisions with strategic reasoning",
                "Always follow: Strategy → Concept → Execution",
                "Never generate generic designs",
                "Always validate differentiation vs. competitors"
            ]
        },

        "typography": {
            "title": "Typography Systems",
            "description": "Expert-level typography hierarchy and strategic selection",
            "principles": {
                "three_tier_hierarchy": {
                    "primary_typeface": {
                        "role": "Personality carrier",
                        "usage": "Headlines, brand moments, key messaging, hero sections",
                        "characteristics": "Distinctive, memorable, aligned with brand personality",
                        "weight_range": "Minimum 2-3 weights (Regular, Bold, optional Black)"
                    },
                    "secondary_typeface": {
                        "role": "Utility workhorse",
                        "usage": "Body text, captions, supporting content, UI elements",
                        "characteristics": "Highly readable, neutral, extensive character set",
                        "weight_range": "Minimum 4 weights (Light, Regular, Medium, Bold)"
                    },
                    "display_typeface": {
                        "role": "Emotional punch (optional)",
                        "usage": "Special moments, hero sections, campaign headers",
                        "characteristics": "Highly expressive, used sparingly for impact",
                        "weight_range": "Often single weight, highly stylized"
